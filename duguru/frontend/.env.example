# frontend/.env.example
# Copy to .env.local and fill in your values.
# Never commit .env.local to version control.

# ─── API ──────────────────────────────────────────────────────────
# URL da API backend (sem barra final)
VITE_API_BASE_URL=http://localhost:3000

# ─── Feature Flags ────────────────────────────────────────────────
# Habilita o banner de instalação PWA (true | false)
VITE_PWA_INSTALL_BANNER=true

# ─── Monitoramento ────────────────────────────────────────────────
# DSN do Sentry para captura de erros no frontend
# Obtido em: https://sentry.io/settings/<org>/projects/<project>/keys/
VITE_SENTRY_DSN=

# ─── Playwright E2E ───────────────────────────────────────────────
# URL base usada pelo Playwright (sobrescreve o webServer.url)
PLAYWRIGHT_BASE_URL=http://localhost:5173
